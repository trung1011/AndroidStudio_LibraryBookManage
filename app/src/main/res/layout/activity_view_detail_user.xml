<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/Theme.51703210_demo_1"
    tools:context="com.a51703210_demo.activities_fragments.ViewDetailBookActivity">

  <ImageView
      android:id="@+id/ivDetailUserPic"
      android:layout_width="100dp"
      android:layout_height="100dp"
      android:layout_gravity="center_horizontal"
      android:layout_marginTop="50dp"
      android:src="@drawable/male" />

  <TableLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_margin="15dp"
      android:background="@drawable/layout_border"
      android:paddingTop="10dp"
      android:stretchColumns="10dp">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/textView"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_weight="1"
          android:text="Fullname"
          android:textColor="#F44336"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/tvUserDetailName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_weight="1"
          android:text="TextView"
          android:textColor="#F44336"
          android:textSize="24sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/textView5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_weight="1"
          android:text="Email"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/tvUserDetailEmail"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_weight="1"
          android:text="TextView"
          android:textSize="24sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/textView3"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_weight="1"
          android:text="Phone Number"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/tvUserDetailPhone"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_weight="1"
          android:text="TextView"
          android:textSize="24sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/textView2"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_weight="1"
          android:text="Gender"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/tvUserDetailGender"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_weight="1"
          android:text="TextView"
          android:textSize="24sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_weight="1"
          android:text="Address"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/tvUserDetailAddress"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_weight="1"
          android:text="TextView"
          android:textSize="24sp" />

    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <TextView
          android:id="@+id/textView6"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_weight="1"
          android:text="Profession"
          android:textSize="24sp" />

      <TextView
          android:id="@+id/tvUserDetailProf"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="15dp"
          android:layout_weight="1"
          android:text="TextView"
          android:textSize="24sp" />

    </TableRow>
  </TableLayout>


    <Button
        android:id="@+id/btnBackToUserList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#4CAF50"
        android:layout_gravity="center_horizontal"
        android:text="Back"
        android:textSize="20sp" />



</LinearLayout>